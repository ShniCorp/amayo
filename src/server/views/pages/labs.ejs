<div class="min-h-screen px-6 py-8">
  <div class="max-w-5xl mx-auto">
    <header class="mb-6">
      <h1 class="text-2xl font-semibold text-slate-100">Labs — <%= selectedGuildName || 'Unknown Guild' %></h1>
      <% if (selectedGuildId) { %>
        <p class="text-sm text-slate-400">Configuring guild ID: <%= selectedGuildId %></p>
      <% } %>
    </header>

    <section class="bg-slate-800/60 p-6 rounded-lg border border-slate-700/50">
      <p class="text-slate-300">Aquí irán las herramientas y configuraciones para el servidor seleccionado.</p>
      <div class="mt-4">
        <a href="/dashboard" class="text-sm text-slate-200 hover:text-white">← Volver a la lista de servidores</a>
      </div>
    </section>
  </div>
</div>

