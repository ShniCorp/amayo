<nav class="fixed inset-x-0 top-0 z-50 pixel-navbar bg-slate-900/60 backdrop-blur">
  <div class="mx-auto max-w-[120rem] px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between">
    <a href="/dashboard" class="flex items-center gap-3 group">
      <img src="/assets/images/logo-amayo.svg" alt="logo" class="h-8 w-8" />
      <span class="font-['Press_Start_2P'] text-sm gradient-text"><%= appName || 'Amayo' %></span>
    </a>

    <div class="flex items-center gap-4">
      <% if (typeof selectedGuildName !== 'undefined' && selectedGuildName) { %>
        <a href="/dashboard/<%= encodeURIComponent(selectedGuildId || '') %>" class="hidden sm:inline-block text-sm text-slate-200 truncate max-w-[12rem]">
          <strong class="mr-2">Guild:</strong> <%= selectedGuildName %>
        </a>
      <% } %>

      <% if (session && session.user) { %>
        <% const avatarUrl = session.user.avatar ? `https://cdn.discordapp.com/avatars/${session.user.id}/${session.user.avatar}.png?size=64` : '/assets/images/default-avatar.png'; %>
        <div class="flex items-center gap-2">
          <img src="<%= avatarUrl %>" alt="avatar" class="h-8 w-8 rounded-full ring-1 ring-slate-700" />
          <span class="hidden md:inline text-slate-200 text-sm truncate max-w-[10rem]"><%= session.user.username %></span>
        </div>
      <% } %>

      <a href="/select_guild" class="text-sm text-slate-200 hover:text-white">Select</a>
      <a href="/auth/logout" class="text-sm text-slate-200 hover:text-white">Logout</a>
    </div>
  </div>
</nav>

