<!-- Centered selector card for dashboard (no top navbar) -->
<div class="fixed inset-0 flex items-start justify-center pt-24 z-50 pointer-events-none">
  <div class="pointer-events-auto w-[520px] bg-[#1b2329]/80 border border-[#2b3237] rounded-lg shadow-xl backdrop-blur-md">
    <div class="px-6 py-5">
      <div class="flex items-center justify-center">
        <img src="/assets/images/logo-amayo.svg" alt="logo" class="w-10 h-10 mr-3">
        <div class="text-center">
          <div class="text-sm font-semibold text-gray-100"><%= appName %></div>
        </div>
      </div>
      <div class="mt-4 text-center text-xs text-gray-300">Logged in as <strong class="text-white"><%= user?.username || 'Usuario' %></strong></div>
      <div class="mt-4 border-t border-[#2b3237] pt-4 max-h-72 overflow-auto">
        <% if (Array.isArray(guilds) && guilds.length > 0) { %>
          <ul class="flex flex-col gap-3 px-1">
            <% guilds.forEach(function(g) { %>
              <li class="flex items-center justify-between px-3 py-2 rounded hover:bg-white/3">
                <div class="flex items-center gap-3">
                  <div class="w-8 h-8 bg-[#101418] rounded-full flex items-center justify-center text-sm text-gray-300"> </div>
                  <div class="min-w-0">
                    <div class="text-sm font-medium text-white truncate"><%= g.name %></div>
                    <div class="text-[11px] text-gray-400 truncate">ID: <%= g.id %></div>
                  </div>
                </div>
                <div class="text-gray-300">â€º</div>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <div class="text-center text-sm text-gray-400 py-4">No hay servidores asociados</div>
        <% } %>
      </div>
    </div>
  </div>
</div>
