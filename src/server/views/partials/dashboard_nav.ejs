<header class="fixed inset-x-0 top-0 z-50">
  <div class="mx-auto max-w-[120rem] px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-between pixel-navbar">
    <div class="flex items-center gap-4">
      <img src="/assets/images/logo-amayo.svg" class="w-9 h-9" alt="logo">
      <div class="hidden sm:block">
        <div class="text-sm font-semibold"><%= appName %></div>
        <div class="text-xs text-gray-400">Panel de control</div>
      </div>
    </div>

    <div class="flex items-center gap-4">
      <div class="hidden md:flex items-center gap-3">
        <% if (selectedGuild) { %>
          <div class="text-sm">Servidor: <strong><%= selectedGuild.name %></strong></div>
        <% } else { %>
          <div class="text-sm text-gray-400">Sin servidor seleccionado</div>
        <% } %>
      </div>
      <div class="flex items-center gap-3">
        <% if (user) { %>
          <div class="text-sm text-right">
            <div><%= user.username %></div>
            <div class="text-xs text-gray-400">ID: <%= user.id %></div>
          </div>
        <% } %>
        <a href="/auth/logout" class="text-sm text-red-400">Salir</a>
      </div>
    </div>
  </div>
</header>
